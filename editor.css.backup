/* editor.css */

body {
  margin: 0;
  background: #111;
  color: #fff;
  font-family: system-ui, sans-serif;
}

main {
  max-width: 900px;
  margin: 1rem auto 3rem;
  padding: 0 1rem;
}

h2 {
  margin-top: 0;
  margin-bottom: 1rem;
  font-weight: 700;
}

.editor-tabs {
  display: flex;
  border-bottom: 1px solid #333;
  background: #222;
  border-radius: 6px 6px 0 0;
  overflow-x: auto;
}

.editor-tabs button {
  flex: 1 0 auto;
  padding: 0.75rem 1rem;
  background: #222;
  border: none;
  border-right: 1px solid #333;
  color: #ccc;
  font-weight: 700;
  cursor: pointer;
  transition: background 0.3s ease;
  white-space: nowrap;
}

.editor-tabs button:last-child {
  border-right: none;
}

.editor-tabs button.active {
  background: #0af;
  color: #fff;
}

.tab-content {
  background: #1e1e2f;
  padding: 1rem;
  border-radius: 0 0 6px 6px;
  margin-bottom: 2rem;
}

.tab-content label {
  display: block;
  margin-top: 1rem;
  margin-bottom: 0.3rem;
  font-weight: 600;
  color: #ccc;
}

input[type="text"],
select,
textarea {
  width: 100%;
  padding: 0.5rem;
  border-radius: 6px;
  border: none;
  background: #333;
  color: #eee;
  font-size: 1rem;
  box-sizing: border-box;
  transition: background 0.3s ease;
}

input[type="text"]:focus,
select:focus,
textarea:focus {
  outline: none;
  background: #444;
}

select[multiple] {
  height: auto;
  min-height: 120px;
}

.export-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 0.7rem;
  margin-top: 1rem;
}

.export-buttons button {
  background: #0af;
  border: none;
  padding: 0.6rem 1.3rem;
  border-radius: 6px;
  color: white;
  font-weight: 700;
  cursor: pointer;
  transition: background 0.3s ease;
  flex: 1 0 150px;
}

.export-buttons button:hover {
  background: #08c;
}

#articleListDisplay {
  background: #222;
  padding: 1rem;
  border-radius: 6px;
  max-height: 280px;
  overflow-y: auto;
  color: #ccc;
  font-family: monospace;
  font-size: 0.9rem;
  white-space: pre-wrap;
}

#newCategoryInput {
  display: inline-block;
  box-sizing: border-box;
  margin-right: 0.5rem;
}

#addCategoryBtn {
  background: #0af;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 6px;
  color: white;
  cursor: pointer;
  font-weight: 700;
  transition: background 0.3s ease;
}

#addCategoryBtn:hover {
  background: #08c;
}

/* Quill editor overrides */
.ql-container {
  border-radius: 6px;
  border: none;
  font-size: 1rem;
  height: 300px;
}

.ql-toolbar {
  border-radius: 6px 6px 0 0;
  border: none;
  background: #222;
  color: #ccc;
}

.ql-toolbar .ql-picker-label,
.ql-toolbar .ql-picker-item {
  color: #ccc;
}

.ql-toolbar .ql-picker-item:hover,
.ql-toolbar .ql-picker-label:hover,
.ql-toolbar button:hover {
  color: #0af;
}

/* Scrollbars */
.tab-content::-webkit-scrollbar,
#articleListDisplay::-webkit-scrollbar {
  width: 8px;
}

.tab-content::-webkit-scrollbar-thumb,
#articleListDisplay::-webkit-scrollbar-thumb {
  background-color: #444;
  border-radius: 10px;
}

.tab-content::-webkit-scrollbar-track,
#articleListDisplay::-webkit-scrollbar-track {
  background: transparent;
}

/* Responsive */
@media (max-width: 600px) {
  .editor-tabs button {
    font-size: 0.85rem;
    padding: 0.5rem 0.7rem;
  }

  .export-buttons button {
    flex: 1 0 100%;
  }

  #newCategoryInput {
    width: 65%;
    margin-bottom: 0.5rem;
  }

  #addCategoryBtn {
    width: 30%;
  }
}