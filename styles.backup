/* Reset & Base */
* {
  box-sizing: border-box;
}
body {
  margin: 0;
  font-family: system-ui, sans-serif;
  background: #111;
  color: #fff;
  transition: background 0.3s, color 0.3s;
}
img {
  max-width: 100%;
  display: block;
}
button {
  cursor: pointer;
}

/* Light Mode */
body.light-mode {
  background: #f7f7f7;
  color: #222;
}
body.light-mode header {
  background: #fff;
  border-bottom: 1px solid #ccc;
}
body.light-mode nav {
  background: #fff;
  border-right: 1px solid #ccc;
}
body.light-mode .category-filters button.active {
  background: #222;
  color: #fff;
}

/* Header */
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #1e1e2f;
  color: white;
  padding: 0.75rem 1rem;
  position: sticky;
  top: 0;
  z-index: 1000;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
}
.site-logo {
  height: 40px;
  border-radius: 6px;
}
.menu-icons button {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: white;
}

/* Nav (Hamburger Menu) */
.nav-links {
  position: fixed;
  top: 60px;
  left: 0;
  width: 260px;
  height: 100vh;
  background: #222;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
  overflow-y: auto;
  padding: 1rem;
  z-index: 999;
}
.nav-links.open {
  transform: translateX(0);
}
.nav-links a {
  display: block;
  padding: 0.5rem;
  color: #ddd;
  text-decoration: none;
  border-bottom: 1px solid #444;
}
.nav-links a:hover,
.nav-links a.active {
  background: #333;
  color: #fff;
  border-radius: 4px;
}

/* Main Content */
main {
  padding: 1rem;
  max-width: 960px;
  margin: auto;
}
#searchBox {
  width: 100%;
  padding: 0.5rem;
  margin-bottom: 1rem;
  font-size: 1rem;
}
.category-filters {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 1rem;
}
.category-filters button {
  background: #444;
  color: #fff;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 20px;
}
.category-filters button.active {
  background: #0af;
  color: #fff;
}

/* Articles */
article {
  background: #1e1e2f;
  padding: 1rem;
  border-radius: 10px;
  margin-bottom: 1.5rem;
  transition: background 0.3s;
}
article img {
  height: 180px;
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: 0.5rem;
}
article h2 {
  margin-top: 0;
}
.card-buttons {
  margin-top: 1rem;
  display: flex;
  gap: 0.5rem;
}
.card-buttons button {
  background: #333;
  color: #fff;
  border: none;
  padding: 0.4rem 0.8rem;
  border-radius: 5px;
}
.card-buttons button:hover {
  background: #0af;
  color: #fff;
}

/* Article Viewer */
.article-viewer {
  background: #1e1e2f;
  padding: 1rem;
  border-radius: 10px;
  margin-bottom: 2rem;
}

/* Pagination */
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1rem;
  margin: 1rem 0 2rem;
}
.pagination button {
  background: #0af;
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 6px;
  font-weight: bold;
}
.pagination button:disabled {
  background: #888;
  cursor: not-allowed;
}

/* Back Button */
#backButton {
  display: inline-block;
  background: #333;
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 5px;
  margin-top: 1rem;
}

/* Responsive Fixes */
@media (min-width: 768px) {
  .nav-links {
    width: 240px;
  }
}